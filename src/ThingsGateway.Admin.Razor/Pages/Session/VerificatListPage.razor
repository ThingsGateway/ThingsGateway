@namespace ThingsGateway.Admin.Razor
@using ThingsGateway.Admin.Application
@using ThingsGateway.Core.Extension
@inherits ComponentDefault

<AdminTable @ref="table" TItem="VerificatInfo" AutoGenerateColumns="true" AllowDragColumn="true" ShowAdvancedSearch=false
            AllowResizing="true" IsFixedHeader=true IsMultipleSelect=true SearchModel=SearchModel
            ShowExtendButtons=true ShowExtendDeleteButton=false ShowExtendEditButton=false
            ShowDefaultButtons=false ExtendButtonColumnWidth=220
            OnQueryAsync="OnQueryAsync" IsPagination=true>
    <TableToolbarTemplate>
        <TableToolbarButton TItem="VerificatInfo"
                            Color=Color.Warning Text="@Localizer[ nameof(SessionService.ExitVerificat)]"
                            IsAsync OnClickCallback=@(async(a)=>{if(a.Any()){  await SessionService.ExitVerificat(new ExitVerificatInput(){ Id=UserId, VerificatIds= a.Select(b=> b.Id )});VerificatInfos.RemoveWhere(c=>a.Contains(c)); await table.QueryAsync(); }}) />
    </TableToolbarTemplate>
    <RowButtonTemplate>
        <TableCellPopConfirmButton IsShow=@AuthorizeButton("强退令牌") Size="Size.ExtraSmall" Color=Color.Warning Text="@Localizer[ nameof(SessionService.ExitVerificat)]" OnConfirm="@(async()=>{await SessionService.ExitVerificat(new ExitVerificatInput(){ Id=UserId, VerificatIds=new List<long>(){ context.Id}});VerificatInfos.Remove(context); await table.QueryAsync();await ToastService.Default(); })" />
    </RowButtonTemplate>
</AdminTable>

@code {
    AdminTable<VerificatInfo> table;
}