@namespace ThingsGateway.Admin.Razor
@inherits ComponentDefault
@using ThingsGateway.Admin.Application
@using ThingsGateway.NewLife.X

<ValidateForm class="p-4" Model="@Model" OnValidSubmit="OnSave">
     
    <BootstrapInput @bind-Value=@Model.Password type="password"></BootstrapInput>
    <BootstrapInput @bind-Value=@Model.NewPassword type="password"></BootstrapInput>
    <BootstrapInput @bind-Value=@Model.ConfirmPassword type="password"></BootstrapInput>

    <Button class="mt-2" ButtonType="ButtonType.Submit" Icon="fa-solid fa-floppy-disk" IsAsync Text=@DefaultLocalizer["Save"] />
</ValidateForm>
