<Project Sdk="Microsoft.NET.Sdk.Razor">

  <Import Project="$(SolutionDir)Version.props" />
  <Import Project="$(SolutionDir)PackNuget.props" />

  <ItemGroup>
    <Content Remove="Locales\*.json" />
    <EmbeddedResource Include="Locales\*.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BootstrapBlazor" Version="8.7.1" />
    <PackageReference Include="BootstrapBlazor.FontAwesome" Version="8.0.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ThingsGateway.Core\ThingsGateway.Core.csproj" />
    <ProjectReference Include="..\ThingsGateway.Startup\ThingsGateway.Startup.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Pack>true</Pack>
      <PackagePath>contentFiles/any/wwwroot</PackagePath>
    </Content>
  </ItemGroup>
</Project>


