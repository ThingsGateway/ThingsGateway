<Project Sdk="Microsoft.NET.Sdk.Razor">

  <Import Project="$(SolutionDir)NugetPackageReference.props" />
  <Import Project="$(SolutionDir)Version.props" />
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <OpenApiGenerateDocuments>false</OpenApiGenerateDocuments>
    <SatelliteResourceLanguages>zh-Hans;en-US</SatelliteResourceLanguages>
    <PublishReadyToRunComposite>true</PublishReadyToRunComposite>
    <ApplicationIcon>favicon.ico</ApplicationIcon>
    <TargetFrameworks>net8.0-windows;</TargetFrameworks>

    <!--动态适用GC-->
    <GarbageCollectionAdaptationMode>1</GarbageCollectionAdaptationMode>
    <!--使用工作站GC-->
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <!--<PlatformTarget>x86</PlatformTarget>-->
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(SolutionName)'!='ThingsGateway - Admin'">

    <Exec Command="@echo off&#xD;&#xA;setlocal enabledelayedexpansion&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;    set &quot;dir=$(SolutionDir)ThingsGateway.Winform\bin\$(Configuration)\net8.0-windows\Plugins&quot;&#xD;&#xA;    set &quot;dir1=$(SolutionDir)ThingsGateway.Server\bin\$(Configuration)\net8.0\Plugins&quot;&#xD;&#xA;    if not exist &quot;!dir!&quot; md &quot;!dir!&quot;&#xD;&#xA;    if not exist &quot;!dir1!&quot; md &quot;!dir1!&quot;&#xD;&#xA;xcopy  &quot;!dir1!&quot; &quot;!dir!&quot;  /E /I /H /K /Y&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;endlocal&#xD;&#xA;&#xD;&#xA;&#xD;&#xA;" Condition="'$(OS)'=='Windows_NT'" />
  </Target>


  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebView.WindowsForms" Version="8.0.82" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.8" />
  </ItemGroup>

  <PropertyGroup Condition="'$(SolutionName)'=='ThingsGateway - Admin'">
    <DefineConstants>Admin</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(SolutionDir)\ThingsGateway.Admin.Razor\ThingsGateway.Admin.Razor.csproj" />
    <ProjectReference Include="$(SolutionDir)\ThingsGateway.Admin.NetCore\ThingsGateway.Admin.NetCore.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(SolutionName)' != 'ThingsGateway - Admin'">
    <ProjectReference Include="$(SolutionDir)\ThingsGateway.Gateway.Razor\ThingsGateway.Gateway.Razor.csproj" />
    <ProjectReference Include="$(SolutionDir)\ThingsGateway.Gateway.NetCore\ThingsGateway.Gateway.NetCore.csproj" />
  </ItemGroup>




  <ItemGroup>
    <Content Include="..\ThingsGateway.Server\Index\AdminIndex.razor" Link="Index\AdminIndex.razor" />
    <Content Include="..\ThingsGateway.Server\Index\GatewayIndex.razor" Link="Index\GatewayIndex.razor" />
    <Compile Include="..\ThingsGateway.Photino\Startup.cs" Link="Startup.cs" />
    <Compile Include="..\ThingsGateway.Server\Index\AdminIndex.razor.cs" Link="Index\AdminIndex.razor.cs" />
    <Compile Include="..\ThingsGateway.Server\Index\GatewayIndex.razor.cs" Link="Index\GatewayIndex.razor.cs" />
    <Content Include="..\ThingsGateway.Photino\Routes.razor" Link="Routes.razor" />
    <None Include="..\ThingsGateway.Server\Index\AdminIndex.razor.css" Link="Index\AdminIndex.razor.css" />
    <None Include="..\ThingsGateway.Server\Index\GatewayIndex.razor.css" Link="Index\GatewayIndex.razor.css" />
    <Content Include="..\ThingsGateway.Server\MainLayout.razor" Link="MainLayout.razor" />
    <Compile Include="..\ThingsGateway.Server\MainLayout.razor.cs" Link="MainLayout.razor.cs" />
    <Content Include="..\ThingsGateway.Server\MainLayout.razor.css" Link="MainLayout.razor.css" />
    <Content Include="..\ThingsGateway.Server\Index\GatewayIndexComponent.razor" Link="Index\GatewayIndexComponent.razor" />
    <Compile Include="..\ThingsGateway.Server\Index\GatewayIndexComponent.razor.cs" Link="Index\GatewayIndexComponent.razor.cs" />

    <Compile Include="..\ThingsGateway.Server\SingleFilePublish.cs" Link="SingleFilePublish.cs" />



    <None Include="..\ThingsGateway.Server\Directory.Build.targets" Link="Directory.Build.targets" />
    <Content Include="..\ThingsGateway.Server\wwwroot\favicon.ico" Link="wwwroot\favicon.ico" />
    <Content Include="..\ThingsGateway.Server\wwwroot\favicon.png" Link="wwwroot\favicon.png" />
    <Content Include="..\ThingsGateway.Server\appsettings.Development.json" Link="appsettings.Development.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\ThingsGateway.Server\appsettings.json" Link="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="favicon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <EmbeddedResource Include="..\ThingsGateway.Server\Locales\en-US.json" Link="Locales\en-US.json" />
    <EmbeddedResource Include="..\ThingsGateway.Server\Locales\zh-CN.json" Link="Locales\zh-CN.json" />
    <EmbeddedResource Include="Locales\*.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>

    <Content Update="wwwroot\**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
