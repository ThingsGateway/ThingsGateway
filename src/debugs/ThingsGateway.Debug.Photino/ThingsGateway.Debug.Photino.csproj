  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\ThingsGateway.Debug.Rcl\ThingsGateway.Debug.Rcl.csproj" />
  </ItemGroup>

  <PropertyGroup Condition="'$(SolutionName)'=='ThingsGateway - Pro'">
