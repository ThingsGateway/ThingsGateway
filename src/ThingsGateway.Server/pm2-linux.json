{
  "apps": {
    "name": "ThingsGateway",
    "script": "dotnet",
    "exec_mode": "fork",
    "error_file": "logs/pm2err.log",
    "out_file": "logs/pm2out.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "min_uptime": "60s",
    "max_restarts": 30,
    "autorestart": true,
    "restart_delay": "60",
    "args": [
      "ThingsGateway.Server.dll",
      " --urls=http://*:5000"
    ],
    "env": {
      "ASPNETCORE_ENVIRONMENT": "Production"
    }
  }
}