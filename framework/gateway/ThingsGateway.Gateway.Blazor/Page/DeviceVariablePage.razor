        <MRow Class="mt-3">
            <MCol Md=3 Sm=12>
                <MSelect @bind-Value=@context.BoolOpenAlarmEnable Outlined Label=@(context.Description(x => x.BoolOpenAlarmEnable)) Color="primary"
                         Items=@(new List<bool>(){true,false}) Clearable
