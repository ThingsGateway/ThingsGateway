                     {
                     context.VariablePropertys.AddOrUpdate(_choiceUploadDeviceId,a=> data,(a,b)=>data);
                     }
                     else
                     {
                     context.VariablePropertys.AddOrUpdate(_choiceUploadDeviceId,a=> data,(a,b)=>data);
                     }
                     }
                     else
                     {
                     await PopupService.EnqueueSnackbarAsync("需选择上传设备",AlertTypes.Warning);
