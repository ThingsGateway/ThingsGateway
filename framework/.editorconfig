[*.cs]

# CA1822: 将成员标记为 static
dotnet_diagnostic.CA1822.severity = none

# CA1816: Dispose 方法应调用 SuppressFinalize
dotnet_diagnostic.CA1816.severity = none

# CA2254: 模板应为静态表达式
dotnet_diagnostic.CA2254.severity = none

[*.cs]
#### 命名样式 ####

# 命名规则

