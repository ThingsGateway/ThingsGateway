@inherits BaseComponentBase
@namespace ThingsGateway.Admin.Blazor.Core
@using Masa.Blazor
@inject UserResoures UserResoures
@*一个完整的AppBar栏，包含手机与电脑的显示切换*@

@if (!IsMobile)
{
    <Breadcrumb />
    <Favorite />
    <MSpacer />
    <Search />
    <AppbarButtons />
}
else
{
    <MSpacer />
    <Logo CONFIG_COPYRIGHT=@CONFIG_COPYRIGHT CONFIG_COPYRIGHT_URL=@CONFIG_COPYRIGHT_URL CONFIG_TITLE=@CONFIG_TITLE HeightInt=@(IsMobile?BlazorResourceConst.AppBarHeight:BlazorResourceConst.AppBarHeight+BlazorResourceConst.PageTabsHeight)></Logo>

    <MDialog Class="pa-1">
        <ActivatorContent>
            <MButton Class="mr-0" Icon Small=IsMobile
            @attributes="@context.Attrs">
                <MIcon>mdi-magnify</MIcon>
            </MButton>
        </ActivatorContent>
        <ChildContent>
            <MSheet Class="d-flex  align-center justify-center" Height=@BlazorResourceConst.AppBarHeight>
                <Search />
            </MSheet>
        </ChildContent>
    </MDialog>
}

