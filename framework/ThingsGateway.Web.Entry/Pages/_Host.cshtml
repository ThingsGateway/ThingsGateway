@page "_Host"
@using Microsoft.AspNetCore.Components.Web;
@using ThingsGateway.Admin.Blazor.Core;
@using ThingsGateway.Admin.Blazor;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ThingsGateway</title>
    <base href="/" />

    <link href="_content/Masa.Blazor/css/masa-blazor.min.css" rel="stylesheet" />
    <link href=@(BlazorResourceConst.ResourceUrl+"css/materialdesign/v7.1.96/css/materialdesignicons.min.css") rel="stylesheet">
    <link href=@(BlazorResourceConst.ResourceUrl+"css/material/icons.css") rel="stylesheet">
    <link href=@(BlazorResourceConst.ResourceUrl+"css/fontawesome/v6.4.0/css/all.min.css") rel="stylesheet">
    <link href=@(BlazorResourceConst.ResourceUrl+"custom.css") rel="stylesheet">

    <!-- PWA Manifest -->
    <link rel="manifest" href="./manifest.json" />

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

</head>


<body>

    <app>
        <component type="typeof(BlazorApp)" render-mode="ServerPrerendered" />
    </app>

    <script src="_framework/blazor.server.js"></script>
    <script src=@(BlazorResourceConst.ResourceUrl+"js/jquery-3.5.1.js") type="text/javascript" charset="UTF-8"></script>
    <script src="_content/BlazorComponent/js/blazor-component.js"></script>
    <!-- PWA Service Worker -->
    <script type="text/javascript">'serviceWorker' in navigator && navigator.serviceWorker.register('./service-worker.js')</script>

</body>

</html>
